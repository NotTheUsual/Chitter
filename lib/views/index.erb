<ul id="peeps-container">
  <% @peeps.each do |peep| %>
    <li>
      <section class="peep">
        <header>
          <span class="name"><%= peep.maker.name %></span>
          <span class="username">@<%= peep.maker.username %></span>
          <% if peep.original %>
          <span class="parent-link"><a href="/peeps/<%= peep.original.id %>">in reply to <%= peep.original.maker.username %></a></span>
          <% end %>
          <a href="/peeps/<%= peep.id %>" class="date"><%= peep.short_time %></a>
        </header>
        <div class="message"><%= peep.message %></div>
      </section>
    </li>
  <% end %>
</ul>